@model IEnumerable<DirtyCoins.Models.Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}
<style>
    .od-cus {
        margin: 60px auto 0px;
        padding-bottom: 40px;
    }
</style>
<div class="container dirtycoins-body od-cus">
    <div class="card border-0 shadow-sm hover-glow p-4" style="border-radius:20px; background: linear-gradient(180deg, rgba(255, 255, 255, 0.95), rgba(255, 250, 235, 0.9));">
        <h3 class="fw-bold mb-4" style="color:var(--dc-green); font-family:'Bebas Neue',sans-serif;">
            <i class="bi bi-list-ul me-2 text-gold"></i> Danh sách đơn hàng
        </h3>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info rounded-pill text-center shadow-sm">
                @TempData["Message"]
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-borderless align-middle text-center">
                    <thead style="background-color:var(--dc-dark); color:var(--dc-text-light);">
                        <tr>
                            <th>Chi tiết</th>
                            <th>Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th>Phương thức TT</th>
                            <th>Thanh toán</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Sản phẩm</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var o in Model)
                        {
                            <tr class="border-bottom">
                                <td>
                                    <a class="btn btn-sm bg-gold rounded-pill shadow-sm"
                                       href="@Url.Action("OrderDetail", "Customer", new { id = o.IdOrder })">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                                <td class="fw-semibold">@o.OrderCode</td>
                                <td>@o.OrderDate.ToString("dd/MM/yyyy")</td>
                                <td>@o.PaymentMethod</td>
                                <td>
                                    @if (o.Pay)
                                    {
                                        <span class="badge bg-success">Đã TT</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Chưa TT</span>
                                    }
                                </td>
                                <td class="fw-bold">@o.TotalAmount.ToString("N0") ₫</td>
                                <td>
                                    <span class="badge @(o.Status switch
                                          {
                                              "Đang xử lý" => "bg-warning text-dark",
                                              "Chờ giao hàng" => "bg-info text-dark",
                                              "Đang giao hàng" => "bg-primary",
                                              "Giao hàng thành công" => "bg-success",
                                              "Đã hủy" => "bg-danger",
                                              _ => "bg-secondary"
                                          })">@o.Status</span>
                        </td>
                        <td class="text-start">
                            <ul class="mb-0 small">
                                @foreach (var d in o.OrderDetails)
                                        {
                                            <li>@d.Product.Name (x(@d.Quantity))</li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    @if (o.Status == "Đang xử lý" || o.Status == "Chờ giao hàng")
                                    {
                                        <form asp-action="CancelOrder" method="post"
                                              onsubmit="return confirm('Xác nhận huỷ đơn này?');" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@o.IdOrder" />
                                            <button type="submit" class="btn btn-sm btn-danger rounded-pill">
                                                Huỷ
                                            </button>
                                        </form>
                                    }
                                    else if (o.Status == "Đang giao hàng")
                                    {
                                        <form asp-action="ConfirmReceived" method="post"
                                              onsubmit="return confirm('Xác nhận đã nhận hàng?');" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@o.IdOrder" />
                                            <button type="submit" class="btn btn-sm bg-green rounded-pill text-white">
                                                Nhận hàng
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox fs-2 mb-2"></i><br />
                Hiện chưa có đơn hàng nào.
            </div>
        }

        <div class="text-end mt-3">
            <a href="@Url.Action("Dashboard", "Customer")"
               class="btn btn-outline-dark rounded-pill px-4 hover-glow">
                ⬅ Quay lại trang cá nhân
            </a>
        </div>
    </div>
</div>
